{% extends "base.html.twig" %}

{% block body %}

    <main>

        <h2>{{detailEvent.titre}}</h2>

        {% if detailEvent.picture %}
            <img src="{{ vich_uploader_asset(detailEvent.picture, 'imageFile') }}"  alt="">
            {% else %}
            <img src="/images/events/empty.png" alt="">
        {% endif %}

        <p>Date: {{detailEvent.dateEvent|date('d/m/Y')}}<br/>
        {{detailEvent.type}}<br/>
        {{detailEvent.description}}</p>
        {% if detailEvent.inscription == 1 %}
            <p>Une inscription auprÃ¨s de la mairie est obligatoire</p>
        {% endif%}

        {% for picture in detailEvent.pictures %}
            <img src="{{ vich_uploader_asset(picture, 'imageFile') }}" width="300" alt="">
        {% endfor %}

    </main>

{% endblock %}